! --   --
!   XFT
! --   --
!Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! --     --
!   XTERM
! --     --
XTerm*background:        #262626 
XTerm*foreground:        #d8d8d8
XTerm*pointerColor:      #1ABB9B
XTerm*faceName:          Fixed
XTerm*faceSize:          11
XTerm*reverseVideo:      on
XTerm*selectToClipboard: true

! --      --
!   COLORS 
! --      --
! special
*.foreground:   #a2a2a2
*.background:   #262626
*.cursorColor:  #a2a2a2

! black
*.color0:       #4e4e4e
*.color8:       #777777

! red
*.color1:       #a9635d
*.color9:       #ffbbb2

! green
*.color2:       #F2CFD7 
*.color10:      #FFA99E

! yellow
*.color3:       #84763d
*.color11:      #e0ce91

! blue
*.color4:       #5879af
*.color12:      #b3d1ff

! magenta
*.color5:       #9c6594
*.color13:      #fabdf0

! cyan
*.color6:       #7CB9BE
*.color14:      #79e0ed

! white
*.color7:       #cfcfcf
*.color15:      #ffffff

Xcursor.theme: xcursor-breeze-snow
Xcursor.size:  0

! --    --
!   ROFI 
! --    --
rofi.color-enabled: true
!                  bg       border   separator
rofi.color-window: #262626, #262626, #262626

!                  bg       fg       bgalt    hlbg     hlfg
rofi.color-normal: #262626, #FFFFFF, #262626, #313131, #d88e8a
rofi.color-active: #262626, #b48ead, #262626, #313131, #93e5cc
rofi.color-urgent: #262626, #ebcb8b, #262626, #313131, #ebcb8b

rofi.width: 300
rofi.bw: 3
rofi.lines: 10
rofi.font: Terminus 11
rofi.modi: run
rofi.hide-scrollbar: true
rofi.kb-accept-custom: 
rofi.kb-remove-to-eol: 
rofi.kb-accept-entry: Return,Control+Return
rofi.kb-row-up: Control+k,Up
rofi.kb-row-down: Control+j,Down

! --     --
!   URXVT
! --     --
! Alternative font settings with 'terminus':
URxvt.font:      -xos4-terminus-medium-r-normal--16-160-72-72-c-80-iso10646-1
URxvt.bold.font: -xos4-terminus-bold-r-normal--16-160-72-72-c-80-iso10646-1
URxvt.italic.font: -xos4-terminus-italic-r-normal--16-160-72-72-c-80-iso10646-1
! General settings
URxvt.depth:                      32
URxvt.background:                 [100]#262626
URxvt*internalBorder: 		      4
URxvt*scrollBar:                  false
URxvt*mouseWheelScrollPage:       false
URxvt*cursorBlink:                true
URxvt*background:                 black
URxvt*foreground:                 grey
URxvt*saveLines:                  8192

! - Keybinds -
! Normal copy-paste keybindings without perls
URxvt.iso14755:                   false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
! Xterm escape codes, word by word movement
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B
! Scroll up / down with shift  
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
