# ---- SCRIPTS ----
alt + Escape
    sh ~/.config/scripts/rofisystemmenu.sh

alt + F1
    sh ~/.config/scripts/keybindsinfo.sh

# ---- Window manipulation ----

# Close window
alt + shift + q
	bspc  node -c

# Kill window
alt + super + shift + q
	bspc  node -k

# Focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Focus or send to the given desktop
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# Swap node with largest node
alt + shift + w
	bspc node -t {pseudo_tiled,tiled}

# Toggle floating mode
alt + w
	{bspc node -t floating && window-placer $(bspc query -T -d | grep -o '"state":"floating"' | wc -l),bspc node -t tiled}

# Toggle fullscreen
alt + f 
	bspc node -t {fullscreen,tiled}	

# Make window sticky
alt + i
	bspc node -g sticky

# Cycle windows
alt + {_,shift + }Tab
    bspc node -f {next,prev}

# Focus node in given direction
alt + {h,j,k,l}
    bspc node -{west,south,north,east}
        	
# Resize windows horizontally
alt + ctrl : {h,l}
  INC={-10,+10}; bspc node @east -r $INC || bspc node @west -r $INC

# Resize windows vertically
alt + ctrl : {j,k}
  INC={+10,-10}; bspc node @north -r $INC || bspc node @south -r $INC

#
# Layout manipulation/desktop level controls
# ______________    

# Swap node with biggest node on workspace
alt + shift + f
   bspc node -s biggest.local

# Increase window gap
alt + g
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 5 ))

# Reset window gap
alt + shift + g
    bspc config -d focused window_gap 0

#
# Spawn programs
#

# Rofi
alt + d
	rofi -show

# Terminal (urxvt)
alt + Return
	urxvt

# Terminal (floating)
alt + shift + Return
    {urxvt, bspc rule -a \* -o state=floating && urxvt}
    
# Pcman filemanager
alt + e
	pcmanfm

# Ranger
alt + shift + e
	urxvt -e ranger

# Print screen
alt + Print
	scrot '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/Pictures/Screenshots/'
	
#
# Media keys
#

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86AudioMute
	volume mute
	
XF86MonBrightnessDown
    light -U 5 

XF86MonBrightnessUp
    light -A 5
 
# Make sxhkd reload its configuration files
alt + shift + F12
	pkill -USR1 -x sxhkd
