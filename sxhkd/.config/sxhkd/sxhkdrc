# ---- SCRIPTS ----
alt + shift + Escape
    sh ~/.config/scripts/rofisystemmenu.sh

# ---- Window manipulation ----

# Close window
alt + shift + q
	bspc  node -c

# Kill window
alt + super + shift + q
	bspc  node -k

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# Toggle tiling mode of window
alt + shift + w
	bspc node -t {pseudo_tiled,tiled}

alt + w
	{bspc node -t floating && window-placer $(bspc query -T -d | grep -o '"state":"floating"' | wc -l),bspc node -t tiled}

# Force all windows of the desktop to tile
#super + shift + w
#	bspcp tile
# Force all windows of the desktop to float and arrange them
#super + w
#	bspcp float
	
# Toggle fullscreen
alt + f 
	bspc node -t {fullscreen,tiled}	

# Try to keep size and position of the selected window
super + o
	bspc node -g private

# Make window sticky
super + i
	bspc node -g sticky

# Lock a window from closing
super + Escape
	bspc node -g locked 

# go (Shift=move) to desktop (and focus the monitor that the desktop is located on. Bspwm style)
#alt + {_,shift + }{1-9,0}
#    bspc {desktop -f,node -d} ^{1-9,10}

# cycle windows
alt + {_,shift + }Tab
    bspc node -f {next,prev}
	
# promote window 
alt + space
    bspc node -s biggest

# focus node in given direction
alt +  {h,j,k,l}
    bspc node -{west,south,north,east}
        	
#resize windows

alt + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
	
alt + ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#
# Layout manipulation/desktop level controls
# ______________    

# Toggle monocle mode
super + f 
	bspc desktop -l next

# Mirror and flip leaves of tree
alt + {comma,period}
	bspc node @/ -F {horizontal,vertical}

# Change window gap
alt + g
	bspc config -d focused window_gap {$gap,$(($gap+$gap)),$(($gap+$gap+$gap))}

#
# spawn programs
#

# run applications
alt + shift + d
	dmenu_recent -fn 'xos4 Terminus:size=15' -i -l 14 -w 600 -y $PANEL_HEIGHT

alt + d
	rofi -show

alt + Return
	urxvt
    		
alt + e
	pcmanfm

alt + shift + e
	urxvt -e ranger

alt + Print
	scrot '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/Pictures/Screenshots/'
	
#
# Media keys
#

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86AudioMute
	volume mute
	
XF86MonBrightnessDown
    light -U 5 

XF86MonBrightnessUp
    light -A 5
 
XF86Sleep
	systemctl suspend

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd
