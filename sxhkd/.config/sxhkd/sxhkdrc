# ---- Window manipulation ----

# Close window
alt + shift + q
	bspc  node -c

# Kill window
alt + super + shift + q
	bspc  node -k

# Focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Focus or send to the given desktop
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# Swap node with largest node
alt + shift + w
	bspc node -t {pseudo_tiled,tiled}

# Toggle floating mode
alt + w
	bspc node -t {floating,tiled}

# Toggle fullscreen
alt + f 
	bspc node -t {fullscreen,tiled}	

# Make window sticky
alt + i
	bspc node -g sticky

# Cycle between nodes in workspace
alt + {_,shift + }Tab
    bspc node -f {next,prev}.local

# Focus node in given direction
alt + {h,j,k,l}
    bspc node -{west,south,north,east}

# Resize node 
alt + ctrl + {h,j,k,l}
	~/.config/scripts/bspwm_resize.sh {west,south,north,east} 50

# Switch to the other monitor
alt + m
	bspc monitor -f next

# Layout manipulation/desktop level controls
# ______________    

# Swap node with biggest node on workspace
alt + shift + f
   bspc node -s biggest.local

# Increase window gap
alt + g
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 5 ))

# Reset window gap
alt + shift + g
    bspc config -d focused window_gap 0

# Spawn programs
# ______________    

# Rofi
alt + d
	rofi -show

# Terminal (urxvt)
alt + Return
    urxvt	
    
# Pcman filemanager
alt + e
	pcmanfm

# Ranger
alt + shift + e
	urxvt -e ranger

# Print screen (saves to ~/Pictures/Screenshots)
alt + Print
	scrot '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f ~/Pictures/Screenshots/'
	
#
# Media keys
#

XF86AudioRaiseVolume
    pactl -- set-sink-volume 0 +10%

XF86AudioLowerVolume
    pactl -- set-sink-volume 0 -10%

XF86AudioMute
    pactl set-sink-mute 0 toggle
	
XF86MonBrightnessDown
    light -U 5 

XF86MonBrightnessUp
    light -A 5

# ---- SCRIPTS ----

# System menu 
alt + Escape
    sh ~/.config/scripts/rofisystemmenu.sh

# Keybinds info 
alt + F1
    sh ~/.config/scripts/keybindsinfo.sh
 
# Reload bspwmrc
alt + F2
    sh ~/.config/bspwm/bspwmrc

# Reload sxhkd 
alt + F3
	pkill -USR1 -x sxhkd
